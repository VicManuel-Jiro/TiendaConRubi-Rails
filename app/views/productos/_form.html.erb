<%= form_with(model: producto,id: 'formulario_productos', local: true) do |form| %>
  <% if producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
      <% producto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <label for="nombre">nombre: </label>
    <%= form.text_field :nombre, :class => "form-control" %>
    <%= form.hidden_field :id %>
  </div>
<div class="form-group">
    <label for="descripcion">Descripcion del producto: </label>
    <%= form.text_field :descripcion, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="categoria">Categoria: </label>
    <%= form.text_field :categoria, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="color">Color predominante: </label>
    <%= form.text_field :color, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="existencia">Existencia: </label>
    <%= form.text_field :existencia, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="precio">Precio: </label>
    <%= form.text_field :precio, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="descuento">Descuento: </label>
    <%= form.text_field :descuento, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="codigo_barras">Codigo de barras: </label>
    <%= form.text_field :codigo_barras, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="proveedor_id">Proveedor: </label>
    <%= form.select :proveedor_id,@proveedor.collect{|e| [e.nombre,e.id]},{include_blank: "Selecciona uno"} %>
  </div>
  
 <div class="form-group"> <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
<% end %>
