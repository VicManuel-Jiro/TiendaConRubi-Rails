<h1>Paises</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @paises.each do |pais| %>
    <tr>
    	<th><%=pais.nombre%></th>
      	<th><%=pais.descripcion%></th>
        <td><%= link_to 'Mostrar',mostrar_pais_path(pais.id)%></td>
        <td><%= link_to 'Editar',editar_pais_path(pais.id)%></td>
        <td><%= link_to 'Eliminar',eliminar_pais_path(pais.id),method: :delete, data:{confirm: 'Estas seguro de eliminar?'}%></td> 
    </tr>
    <%end%>
    </tbody>
</table>
<%= link_to 'Nuevo Pais', nuevo_pais_path %>