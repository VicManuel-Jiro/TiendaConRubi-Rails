<div class="form-group">
    <label for="cliente_id">Cliente: </label>
    <%= form.select :cliente_id,@cliente.collect{|e| [e.nombre,e.id]},{include_blank: "Selecciona uno"} %>
  </div>
  <div class="form-group">
    <label for="sucursal_id">Sucursal: </label>
    <%= form.select :sucursal_id,@sucursal.collect{|e| [e.nombre,e.id]},{include_blank: "Selecciona uno"} %>
  </div>
  <div class="form-group">
    <label for="cp">Codigo postal: </label>
    <%= form.text_field :cp, :class => "form-control" %>
    <%=form.hidden_field :id%>
  </div>
  <div class="form-group">
    <label for="calle">Calle: </label>
    <%= form.text_field :calle, :class => "form-control" %>
  </div>
<div class="form-group">
    <label for="numero">Numero exterior: </label>
    <%= form.text_field :numero, :class => "form-control" %>
  </div>
  <div class="form-group">
    <label for="total">Total: </label>
    <%= form.text_field :total,value:@objeto,:readonly => true,:class => "form-control" %>
  </div>
<div class="form-group">
    <label for="descuento">Descuento: </label>
    <%= form.text_field :descuento, :class => "form-control" %>
  </div>
  <div class="form-group">
    <label for="urgencia">Urgencia: </label>
    <%=form.radio_button :urgencia,'no',:checked => true%>No
    <%=form.radio_button :urgencia,'si'%>Si
  </div>
 <div class="form-group"> <!-- Submit Button -->
        <button type="submit" class="btn btn-primary" id="botonpedido">Guardar</button>
    </div>