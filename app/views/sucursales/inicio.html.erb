<h1>Sucursales</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Calle</th>
      <th>Numero</th>
      <th>Numero de identificacion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @sucursales.each do |sucursal| %>
    <tr>
    	<th><%=sucursal.nombre%></th>
      	<th><%=sucursal.estado.nombre%></th> 
      	<th><%=sucursal.calle%></th>
        <th><%=sucursal.numero%></th>
        <th><%=sucursal.no_identificador%></th>
        <td><%= link_to 'Mostrar',mostrar_sucursal_path(sucursal.id)%></td>
        <td><%= link_to 'Editar',editar_sucursal_path(sucursal.id)%></td>
        <td><%= link_to 'Eliminar',eliminar_sucursal_path(sucursal.id),method: :delete, data:{confirm: 'Estas seguro de eliminar?'}%></td>
    </tr>
    <%end%>
    </tbody>
</table>
<%= link_to 'Nuevo Sucursal', nuevo_sucursal_path %>