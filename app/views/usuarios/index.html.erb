<h1>Usuarios</h1>
<p id="notice" ><%= notice %></p>

<%= form_tag(buscar_usuario_path) do %>
  <table>
    <tr>
      <th>RFC</th>
      <th><%=text_field_tag 'rfc'%></th>
    </tr>
    <tr>
      <th>CURP</th>
      <th><%=text_field_tag 'curp'%></th>
    </tr>
    <tr>
      <th>NOMBRE</th>
      <th><%=text_field_tag 'nombre'%></th>
    </tr>
    <tr>
      <th>PATERNO</th>
      <th><%=text_field_tag 'paterno'%></th>
    </tr>
    <tr>
      <th>MATERNO</th>
      <th><%=text_field_tag 'materno'%></th>
    </tr>
    <tr>
      <th></th>
      <th><button type="submit" class="btn btn-primary">Buscar</button></th>
    </tr>
  </table>
<%end%>

<table>
  <thead>
    <tr>
      <th>Rfc</th>
      <th>Curp</th>
      <th>Nombre</th>
      <th>Paterno</th>
      <th>Materno</th>
      <th>Sexo</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th>Login</th>
      <th>Password</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.rfc %></td>
        <td><%= usuario.curp %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.paterno %></td>
        <td><%= usuario.materno %></td>
        <td><%= usuario.sexo %></td>
        <td><%= usuario.telefono %></td>
        <td><%= usuario.correo %></td>
        <td><%= usuario.login %></td>
        <td><%= usuario.password %></td>
        <td><%= usuario.estado.nombre %></td>
        <td><%= link_to 'Mostrar', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @usuarios, previous_label: 'Anterior',next_label: 'Siguiente',:class => 'paginador' %>
<br>
<%= link_to 'Nuevo Usuario', new_usuario_path %>