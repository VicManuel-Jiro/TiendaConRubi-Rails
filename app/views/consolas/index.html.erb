<p id="notice"><%= notice %></p>

<h1>Consolas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Plataforma</th>
      <th>Color</th>
      <th>Edicion</th>
      <th>Capacidad</th>
      <th>Existencia</th>
      <th>Precio</th>
      <th>Descuento</th>
      <th>Codigo barras</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consolas.each do |consola| %>
      <tr>
        <td><%= consola.nombre %></td>
        <td><%= consola.plataforma.nombre %></td>
        <td><%= consola.color %></td>
        <td><%= consola.edicion %></td>
        <td><%= consola.capacidad %></td>
        <td><%= consola.existencia %></td>
        <td><%= consola.precio %></td>
        <td><%= consola.descuento %></td>
        <td><%= consola.codigo_barras %></td>
        <td><%= link_to 'Mostrar', consola %></td>
        <td><%= link_to 'Editar', edit_consola_path(consola) %></td>
        <td><%= link_to 'Eliminar', consola, method: :delete, data: { confirm: 'estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Consola', new_consola_path %>
