<%= form_with(model: consola,id: 'formulario_consolas', local: true) do |form| %>
  <% if consola.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(consola.errors.count, "error") %> prohibited this consola from being saved:</h2>

      <ul>
      <% consola.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
    <label for="nombre">Nombre: </label>
    <%= form.text_field :nombre, :class => "form-control" %>
    <%= form.hidden_field :id %>
  </div>
  <div class="form-group">
    <label for="plataforma_id">Plataforma del juego: </label>
    <%= form.select :plataforma_id,@plataformas.collect{|e| [e.nombre,e.id]},{include_blank: "Selecciona uno"} %>
  </div>
<div class="form-group">
    <label for="color">Color: </label>
    <%= form.text_field :color, :class => "form-control" %>
  </div>

<div class="form-group">
    <label for="edicion">Edicion: </label>
    <%= form.text_field :edicion, :class => "form-control" %>
  </div>
  <div class="form-group">
    <label for="capacidad">capacidad (en GB): </label>
    <%= form.text_field :capacidad, :class => "form-control" %>
  </div>
  <div class="form-group">
    <label for="existencia">Existencia: </label>
    <%= form.text_field :existencia, :class => "form-control" %>
  </div>
  <div class="form-group">
    <label for="precio">Precio: </label>
    <%= form.text_field :precio, :class => "form-control" %>
  </div>
<div class="form-group">
    <label for="descuento">Descuento: </label>
    <%= form.text_field :descuento, :class => "form-control" %>
  </div>
<div class="form-group">
    <label for="codigo_barras">Codigo de barras: </label>
    <%= form.text_field :codigo_barras, :class => "form-control" %>
  </div>

  <div class="form-group"> <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
<% end %>
