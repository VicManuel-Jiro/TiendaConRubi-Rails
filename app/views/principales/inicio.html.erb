<h1>Productos en existencia</h1>
<div>
<p id="alert"><%= alert %></p>
<p id="notice"><%= notice %></p>
<%= form_tag(buscar_producto_path) do %>
  <table>
      <th>Nombre del producto</th>
      <th><%=text_field_tag 'nombre'%></th>
    </tr>
    <tr>
      <th></th>
      <th><button type="submit" class="btn btn-primary">Buscar</button></th>
    </tr>
  </table>
<%end%>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Existencia</th>
      <th>Descuento</th>
      <th>Precio</th>
      <th>Codigo de barras</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%if !@productos.nil?%>
      <% @productos.each do |producto| %>
        <%if producto.existencia>0%>
          <tr>
            <td><%= producto.nombre %></td>
            <td><%= producto.existencia %></td>
            <td><%= producto.descuento %></td>
            <td><%= producto.precio %></td>
            <td><%= producto.codigo_barras %></td>
            <td><%= link_to 'Pedir',nuevo_pedido_path(producto.codigo_barras)%></td>
          </tr>
        <% end %>
      <% end %>
    <%end%>
    <%if !@consolas.nil?%>
      <% @consolas.each do |consola| %>
        <%if consola.existencia>0%>
          <tr>
            <td><%= consola.nombre %></td>
            <td><%= consola.existencia %></td>
            <td><%= consola.descuento %></td>
            <td><%= consola.precio %></td>
            <td><%= consola.codigo_barras %></td>
            <td><%= link_to 'Pedir',nuevo_pedido_path(consola.codigo_barras)%></td>
          </tr>
        <% end %>
      <% end %>
    <%end%>
    <%if !@juegos.nil?%>
      <% @juegos.each do |juego| %>
        <%if juego.existencia>0%>
          <tr>
            <td><%= juego.titulo %></td>
            <td><%= juego.existencia %></td>
            <td><%= juego.descuento %></td>
            <td><%= juego.precio %></td>
            <td><%= juego.codigo_barras %></td>
            <td><%= link_to 'Pedir',nuevo_pedido_path(juego.codigo_barras)%></td>
          </tr>
        <% end %>
      <% end %>
    <%end%>
  </tbody>
</table>

</div>